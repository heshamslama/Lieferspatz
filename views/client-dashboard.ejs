    <script>
        // Set current year in footer
        document.getElementById('currentYear').textContent = new Date().getFullYear();

        // Location handling functions
        function requestLocation() {
            // const spinner = document.getElementById('loadingSpinner');
            // spinner.classList.remove('d-none');
    
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    function(position) {
                        updateLocation(position.coords.latitude, position.coords.longitude);
                        // spinner.classList.add('d-none'); // Hide spinner after location is fetched
                    },
                    function(error) {
                        // spinner.classList.add('d-none');
                        alert('Error getting location: ' + error.message);
                    }
                );
            } else {
                // spinner.classList.add('d-none');
                alert('Geolocation is not supported by this browser.');
            }
        }


        function updateLocation(latitude, longitude) {
            fetch('/update-location', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ latitude, longitude })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.reload();
                } else {
                    alert('Error updating location: ' + (data.error || 'Unknown error'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Failed to update location');
            });
        }

        // Request location when page loads if none is set
        document.addEventListener('DOMContentLoaded', function() {
            if (document.querySelector('.location-status .alert')) {
                requestLocation();
            }
        });
    </script>
